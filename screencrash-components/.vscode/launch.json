    "version": "0.2.0",
    "configurations": [
        {
          "name": "Run Media Component",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}/media",
          "runtimeExecutable": "${workspaceFolder}/media/node_modules/.bin/electron",
          "windows": {
            "runtimeExecutable": "${workspaceFolder}/media/node_modules/.bin/electron.cmd"
          },
          "args" : ["."],
          "outputCapture": "std"
        },
        {
            "name": "Run Audio Component",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/audio",
            "program": "${workspaceFolder}/audio/src/main.py",
            "args" : [],
            "console": "integratedTerminal"
        }
    ]
}